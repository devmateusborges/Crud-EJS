 </header>
 <center>
     <div class="div_container">
              <h4>Editar</h4>
              
              <form  id="editar" action="/update/<%= supdate[0].ID %>" method="post" >
                <input type="text" name="codigo" value="<%=  supdate[0].jt_codigo %>" placeholder="Codigo" required>
                <input type="text" name="nome" value="<%= supdate[0].jt_nome%>" placeholder="nome" required>
                <input type="text" name="date" value="<%= supdate[0].jt_data_nascimento %>" class="datepicker" placeholder="Data de nacimento" required>
                <label>Selecione os status</label>
                <select name="ativo" value="<%= supdate[0].ativo %>"class="browser-default" required>  
                    <option value="0">Desativado</option>
                    <option value="1">Ativado</option>
                </select>
    
            </form>
              <button form="editar" type="submit" class="btn modal-close waves-effect waves-green btn-flat"><i class="material-icons">send</i></button>
         
     </div>    
</center>



